<?xml version="1.0"?>
<launch>
	<arg name="video_device" default="/dev/video0" />

	<include file="$(find elp_stereo_camera)/launch/camera_driver_elp.launch">
		<arg name="video_device" value="$(arg video_device)" />
		<arg name="camera_info" value="false" />
	</include>

	<node ns="stereo/cameras" pkg="camera_calibration" type="cameracalibrator.py" name="cameracalibrator" 
		args="--size 7x5 --square 0.03  
		right:=right/image_raw left:=left/image_raw 
		right_camera:=right left_camera:=left" 
		output="screen">
	</node>

</launch>
